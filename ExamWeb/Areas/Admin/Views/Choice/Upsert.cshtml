@model Exam.Model.ViewModels.ChoiceVM

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<input asp-for="Choice.Id" hidden />

	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="col-12 pb-2">
					<h2 class="text-primary">@(Model.Choice.Id != 0 ? "Update" : "Create")  Choice</h2>
					<hr />
				</div>
				@*<div asp-validation-summary="All"></div>*@
				<div class="mb-3">
					<label asp-for="Choice.DispalyOrder"></label>
					<input asp-for="Choice.DispalyOrder" class="form-control" />
					<span asp-validation-for="Choice.DispalyOrder" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Choice.ChoiceText"></label>
					<input asp-for="Choice.ChoiceText" class="form-control" />
					<span asp-validation-for="Choice.ChoiceText" class="text-danger"></span>
				</div>
				<div class="mb-3 col-6">
					<label asp-for="Choice.Question"></label>
					<select asp-for="Choice.QuestionId" asp-items="@Model.QuestionList" class="form-select">
						<option disabled selected>--Select Question--</option>
					</select>
					<span asp-validation-for="Choice.QuestionId" class="text-danger"></span>
				</div>
				<div class="col-12">
					@if (Model.Choice.Id != 0)
					{
						<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
					}
					else
					{
						<button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">Create</button>
					}
					<a asp-controller="Choice" asp-action="Index" class="btn btn-secondary" style="width:150px">
						Back to List
					</a>
				</div>
			</div>
		</div>
	</div>

</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
